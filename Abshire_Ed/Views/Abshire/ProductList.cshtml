
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<ProductModel>

<h2>Current Product List</h2>

<p><a href="@Url.Action("AddProduct", "Abshire")">Add A Product</a></p>

@if (Model.Count == 0)
{
    <h4>No Products</h4>
}
else
{
    <div class="productHeader">
        <div class="productName">Product Name</div>
        <div class="productDesc">Description</div>
        <div class="productPrice">Price</div>
        <div class="productInv">Inventory</div>
        <div class="productId">Id</div>
    </div>
    @foreach (var product in Model)
    {
    <div class="product">
        <div class="productName">@product.Name</div>
        <div class="productDesc">@product.Description</div>
        <div class="productPrice">@product.Price.ToString("C")</div>
        <div class="productInv">@product.InventoryAmount</div>
        <div class="productId">@product.ProductId</div>
        <div class="productEdit"><a href="@Url.Action("EditProduct", "Abshire", new { PID = product.ProductId })">Edit</a></div>
        <div class="productDelete"><a href="@Url.Action("DeleteProduct", "Abshire", new { PID = product.ProductId })">Delete</a></div>
    </div>
    }
}
<br />
